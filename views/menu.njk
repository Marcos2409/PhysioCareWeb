            <li>
                <a class="dropdown-item" href="/patients/new">Create new Patient</a>
            </li>
            <li>
                <form action="/patients/find" method="get">
                    <div class="d-flex gap-2">
                        <input type="text" name="surname" class="form-control" placeholder="Search" style="padding: 0.375rem 0.75rem; margin-left: 0.7em;"/>
