        <a class="btn btn-primary btn-lg shadow-sm hover-invert dropdown-toggle" href="#" role="button" id="dropdownRecords" aria-expanded="false">
            Records
        </a>
        <ul class="dropdown-menu dropdown-menu-hover dropdown-menu-left" aria-labelledby="dropdownRecords">
            <li>
                <a class="dropdown-item" href="/records">View all Records</a>
