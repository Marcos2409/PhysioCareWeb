{% extends "base.njk" %}
{% block contenido %}
    <h1>Login</h1>
    <form method="POST" action="/auth/login">
        <div class="form-group">
            <label for="login">Login:</label>
            {% if errors.login %}
                <p class="text-danger">{{ errors.login }}</p>
            {% endif %}
            <input type="text" class="form-control" id="login" name="login" value="{{ patient.login or '' }}" required></div>
            <div class="form-group">
                <label for="password">Password:</label>
                {% if errors.password %}
                    <p class="text-danger">{{ errors.password }}</p>
                {% endif %}
                <input type="password" class="form-control" id="password" name="password" required></div>
                <button type="submit" class="btn btn-primary">Log In</button>
            </form>
        {% endblock %}