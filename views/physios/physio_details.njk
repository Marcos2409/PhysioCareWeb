{% extends "base.njk" %}

{% block titulo %}Physio | Details{% endblock %}

{% block contenido %}
    <h1>Physio details</h1>
    <div class="d-flex">
        <div class="mr-4">
            <p><strong>Name:</strong> {{ physio.name }}</p>
            <p><strong>Surname:</strong> {{ physio.surname }}</p>
            <p><strong>Specialty:</strong> {{ physio.specialty }}</p>
            <p><strong>License number:</strong> {{ physio.licenseNumber }}</p>
            <p>
                <a href="/physios" class="btn btn-success">Volver</a>
            </p>
        </div>

        {% if physio.image %}
            <div class="d-flex justify-content-center">
                <img class="img-thumbnail img-fluid w-auto" style="max-width: 250px;" src="/public/uploads/{{ physio.image }}">
            </div>
        {% endif %}
    </div>
{% endblock %}
