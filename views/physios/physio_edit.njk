{% extends "base.njk" %}
{% block titulo %}Physio | Edit{% endblock %}
{% block contenido %}
    <h1>Physio data edit</h1>
    <form action="/physios/{{ physio.id }}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name:
                <input type="text" class="form-control" name="name" placeholder="Physio's name..." value="{{ physio.name }}"></label>
            </div>
            <div class="form-group">
                <label>Surname:
                    <input type="text" class="form-control" name="surname" placeholder="Physio's surname..." value="{{ physio.surname }}"></label>
                </div>
                <div class="form-group">
                    <label>Specialty:
                        <select class="form-control" name="specialty" id="specialty" required value="{{ physio.spacialty }}">
                            <option value="" disabled selected>Select specialty...</option>
                            <option value="Sports">Sports</option>
                            <option value="Neurological">Neurological</option>
                            <option value="Pediatric">Pediatric</option>
                            <option value="Geriatric">Geriatric</option>
                            <option value="Oncological">Oncological</option>
                        </select>
                    </label>
                </div>
                <div class="form-group">
                    <label>License number:
                        <input type="text" class="form-control" name="licenseNumber" placeholder="Physio's license number" value="{{ physio.licenseNumber }}"></label>
                    </div>
                    <div class="form-group">
                        <label>Patient's profile image:
                            <input type="file" class="form-control" name="image" placeholder="Patient's profile image" value="{{ patient.image }}"></label>
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Enviar
                        </button>
                    </form>
                {% endblock %}